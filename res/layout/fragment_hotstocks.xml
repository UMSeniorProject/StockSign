                        android:layout_gravity="center"
                        android:background="@android:drawable/list_selector_background"
                        android:text="@string/data_missing"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHotDivScore1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/data_null"
                        android:textSize="18sp" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#C0C0C0" />

                <TableRow
                    android:id="@+id/trHotDivScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/table_margin"
                    android:layout_marginTop="@dimen/table_margin" >

                    <TextView
                        android:id="@+id/tvHotDivScoreTicker2"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:background="@android:drawable/list_selector_background"
                        android:text="@string/data_missing"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHotDivScore2"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/data_null"
                        android:textSize="18sp" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#C0C0C0" />

                <TableRow
                    android:id="@+id/trHotDivScore3"
                    android:layout_width="wrap_content"
