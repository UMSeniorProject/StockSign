<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="100"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$RatiosSectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
 	/>
    
	


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_imagegap"
            android:stretchColumns="0,1" >
            
            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/table_margin"
                android:gravity="right" >
                                   
                <TextView
                   
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:text="Company"
                    android:textStyle="bold"
                    android:textSize="18sp"
                     />

                <TextView
                    android:text="Grade"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_column="1"
                    android:textSize="18sp"
                     />

                      
            </TableRow>
            <View
        android:layout_height="2dip"
        android:background="#C0C0C0" ></View>
            
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/table_margin"
                android:layout_marginBottom="@dimen/table_margin"
                android:gravity="right" >
                                   
                <TextView
                    android:id="@+id/stock1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                     />

                <TextView
                    android:id="@+id/stock1_grade"
                    android:layout_gravity="center"
                    android:layout_column="1"
                    android:textSize="18sp"
                     />

                      
            </TableRow>
            
             <View
                 android:layout_height="2dip"
                 android:background="#C0C0C0" />
             
                   <TableRow
            android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/table_margin"
        android:layout_marginBottom="@dimen/table_margin"
        android:layout_height="wrap_content" >
                                   
                <TextView 
            android:id="@+id/stock2"     
            android:layout_gravity="center"
            android:layout_column="0"
            android:textSize="18sp"/>
                <TextView 
            android:id="@+id/stock2_grade"
            android:layout_gravity="center"
            android:layout_column="1"
            android:textSize="18sp"/>

                      
            </TableRow>
            
             <View
        android:layout_height="2dip"
        android:background="#C0C0C0" />
             
            <TableRow
            android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/table_margin"
        android:layout_marginBottom="@dimen/table_margin"
        android:layout_height="wrap_content" >
                                   
                <TextView 
                android:layout_column="0"
            android:id="@+id/stock3"     
            android:layout_gravity="center"
            android:textSize="18sp"/>
                <TextView 
                android:layout_column="1"
            android:id="@+id/stock3_grade"
            android:layout_gravity="center"
            android:textSize="18sp"/>
                     
                      
            </TableRow>
            
             <View
        android:layout_height="2dip"
        android:background="#C0C0C0" />
            
        </TableLayout>
</RelativeLayout>        
</LinearLayout>
