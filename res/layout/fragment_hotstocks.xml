                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHotGrowthScore1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/data_null"
                        android:textSize="18sp" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#C0C0C0" />

                <TableRow
                    android:id="@+id/trHotGrowthScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/table_margin"
                    android:layout_marginTop="@dimen/table_margin" >

                    <TextView
                        android:id="@+id/tvHotGrowthScoreTicker2"
                        android:layout_column="0"
                        android:layout_gravity="center"
