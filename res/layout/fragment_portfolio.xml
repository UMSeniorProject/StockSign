<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    tools:context=".MainActivity$PortfolioSectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dip"
        android:layout_marginTop="10dp"
        android:background="#B0171F" />

    <Button
        android:id="@+id/bAddStock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:checked="false"
        android:text="@string/add_stock"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#009933"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tlPortfolioColumns"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="0,1,2,3,4" >

        <TableRow
            android:id="@+id/trPFmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/tvPFticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="left"
                android:text="@string/title_ticker"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPF_Tscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="left"
                android:text="@string/score_total"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPF_Dscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="left"
                android:text="@string/score_div"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPF_Gscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="left"
                android:text="@string/score_growth"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />
            
           <TextView
                android:id="@+id/tvPF_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:gravity="left" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableLayout
            android:id="@+id/tlPortfolioScores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0,1,2,3,4" >
        </TableLayout>
    </ScrollView>

</LinearLayout>