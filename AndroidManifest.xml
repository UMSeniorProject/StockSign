<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seniorproject.stocksign"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- enable the search dialog to send searches to SearchableActivity -->
        <meta-data android:name="android.app.default_searchable"
                   android:value=".SearchableActivity" />        
        <receiver
            android:name="com.seniorproject.stocksign.database.DownloadPriceDataTask"
            android:exported="true" >
        </receiver>
        <receiver
            android:name="com.seniorproject.stocksign.database.DownloadRatioDataTask"
            android:exported="true" >
        </receiver>

          <activity
            android:name="com.seniorproject.stocksign.activity.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.seniorproject.stocksign.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       <activity
            android:name="com.seniorproject.stocksign.searching.SearchStockActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
			</intent-filter>
        </activity>
       <activity
            android:name="com.seniorproject.stocksign.display.DisplayStockRatioData"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
			</intent-filter>
        </activity>
        <activity
            android:name="com.seniorproject.stocksign.activity.AboutUs"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
			</intent-filter>
        </activity>
        
         <activity
            android:name="com.seniorproject.stocksign.activity.Prefs"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seniorproject.stocksign.activity.FullScreenImage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
			</intent-filter>
        </activity>
        <activity android:name=".SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    <!-- this activity enables the search dialog to initiate searches
         in the SearchableActivity -->
    <activity android:name=".DisplaySearchableActivity">

    </activity>
    <activity 
        android:name=".ActionActivity">
<!-- THIS DOESN'T WORK android:theme="@style/Theme.AppCompat.Light" -->  
    </activity>
    </application>

</manifest>